<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.qboot.sys.dao.SysRoleDao">
	<resultMap id="BaseResultMap" type="org.qboot.sys.dto.SysRole">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="create_by" property="createBy" jdbcType="VARCHAR" />
		<result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
		<result column="update_by" property="updateBy" jdbcType="VARCHAR" />
		<result column="update_date" property="updateDate" jdbcType="TIMESTAMP" />
		<result column="remarks" property="remarks" jdbcType="VARCHAR" />
	</resultMap>
	
	<sql id="Base_Column_List">
		id, name, create_by, create_date, update_by, update_date, remarks
	</sql>
	
	<select id="findById" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from sys_role
		where id = #{id}
	</select>
	
	<select id="findByName" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from sys_role
		where name = #{name}
	</select>
	
	<select id="findList" resultMap="BaseResultMap" parameterType="org.qboot.sys.dto.SysRole">
		select
		<include refid="Base_Column_List" />
		from sys_role
		<where>
			<if test="name !=null and name!=''">
				and name like concat('%',#{name},'%')
			</if>
			<if test="createBy !=null and createBy !=''">
    			and create_by = #{createBy}
    		</if>
			
		</where>
		<!-- 有注入安全漏洞 后台系统忽略可以提高开发速度 -->
		<if
			test="sortField != null and sortField != '' and direction != null and direction !=''">
			order by ${sortField} ${direction}
		</if>
	</select>
	
	<select id="findByUserId" parameterType="java.lang.Long"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from sys_role r ,sys_user_role ur
		where ur.user_id = #{userId} and ur.role_id = r.id
	</select>
	
	<delete id="delete" parameterType="java.lang.String">
		delete from sys_role where id = #{roleId} 
	</delete>
	
	<delete id="deleteRoleMenuByRoleId" parameterType="java.lang.String">
		delete from sys_role_menu where role_id= #{roleId}
	</delete>
	
	<delete id="deleteUserRoleByRoleId" parameterType="java.lang.String">
		delete from sys_user_role where role_id= #{roleId}
	</delete>
	
	<delete id="deleteUserRoleByRoleIdAndUserId">
		delete from sys_user_role where role_id= #{roleId} and user_id = #{userId}
	</delete>
	
	 <insert id="insertUserRole">
		insert into sys_user_role (user_id, role_id) values (#{userId}, #{roleId})
	</insert>
	
	<insert id="insertRoleMenu" parameterType="java.util.List">
		insert into sys_role_menu (role_id, menu_id) values
		<foreach collection="list" item="item" separator=",">
			(#{item.roleId}, #{item.menuId})
		</foreach>
	</insert>
	
	<delete id="deleteRoleDeptByRoleId" parameterType="java.lang.String">
		delete from sys_role_dept where role_id= #{roleId}
	</delete>
	
   <insert id="insertRoleDept" parameterType="java.util.List">
		insert into sys_role_dept (role_id, dept_id) values
		<foreach collection="list" item="item" separator=",">
			(#{item.roleId,jdbcType=VARCHAR}, #{item.deptId,jdbcType=VARCHAR})
		</foreach>
	</insert>
	
	<select id="selectDeptIdsByRoleId" parameterType="String" resultType="String">
		select dept_id from sys_role_dept where role_id = #{roleId}
	</select>
	
	<select id="selectMenuIdsByRoleId" parameterType="String" resultType="String">
		select menu_id from sys_role_menu where role_id = #{roleId}
	</select>
	
	<insert id="insert" parameterType="org.qboot.sys.dto.SysRole">
		insert into sys_role (name, create_by, create_date, update_by, update_date, remarks)
		values (#{name,jdbcType=VARCHAR}, #{createBy,jdbcType=VARCHAR}, #{createDate,jdbcType=TIMESTAMP}, #{updateBy,jdbcType=VARCHAR},
		#{updateDate,jdbcType=TIMESTAMP}, #{remarks,jdbcType=VARCHAR})
	</insert>
	
	<update id="update" parameterType="org.qboot.sys.dto.SysRole">
		update sys_role
		<set>
			<if test="name != null">
				name = #{name,jdbcType=VARCHAR},
			</if>
			<if test="updateBy != null">
				update_by = #{updateBy,jdbcType=VARCHAR},
			</if>
			<if test="updateDate != null">
				update_date = #{updateDate,jdbcType=TIMESTAMP},
			</if>
			<if test="remarks != null">
				remarks = #{remarks,jdbcType=VARCHAR},
			</if>
		</set>
		where id = #{id} 
	</update>
	
	<update id="updateByPrimaryKey" parameterType="org.qboot.sys.dto.SysRole">
		update sys_role set name = #{name,jdbcType=VARCHAR}, update_by = #{updateBy,jdbcType=VARCHAR},
		update_date = #{updateDate,jdbcType=TIMESTAMP}, remarks = #{remarks,jdbcType=VARCHAR}
		where id = #{id} 
	</update>
</mapper>