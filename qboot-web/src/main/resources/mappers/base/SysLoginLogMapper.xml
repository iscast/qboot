<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.qboot.sys.dao.SysLoginLogDao" >
  <resultMap id="BaseResultMap" type="org.qboot.sys.dto.SysLoginLogDto" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="name" property="userName" jdbcType="VARCHAR" />
    <result column="login_name" property="loginName" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="VARCHAR" />
    <result column="login_time" property="loginTime" jdbcType="TIMESTAMP" />
    <result column="ip" property="ip" jdbcType="VARCHAR" />
    <result column="area" property="area" jdbcType="VARCHAR" />
    <result column="user_agent" property="userAgent" jdbcType="VARCHAR" />
    <result column="device_name" property="deviceName" jdbcType="VARCHAR" />
    <result column="browser_name" property="browserName" jdbcType="VARCHAR" />
    <result column="create_by" property="createBy" jdbcType="VARCHAR" />
    <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
    <result column="update_by" property="updateBy" jdbcType="VARCHAR" />
    <result column="update_date" property="updateDate" jdbcType="TIMESTAMP" />
    <result column="remarks" property="remarks" jdbcType="VARCHAR" />
  </resultMap>
  
  <sql id="Base_Column_List" >
  		l.status, l.login_time, l.ip, l.area, l.user_agent, l.device_name, l.browser_name, l.create_by, l.create_date, l.update_by
  		, l.update_date, l.remarks,  u.name, u.login_name
  </sql>
  
  <select id="findList" resultMap="BaseResultMap" parameterType="org.qboot.sys.dto.SysLoginLogDto" >
    select 
    <include refid="Base_Column_List" />
    from sys_login_log l left join sys_user u on u.id = l.user_id
    <where>
	    <if test="startDate!=null">
				and l.login_time >= #{startDate}
		</if>
		<if test="endDate!=null">
			<![CDATA[  
				and l.login_time < #{endDate}
			 ]]>
		</if>
	    <if test="ip !=null and ip!=''">
	    	and l.ip = #{ip}
	    </if>
	    <if test="status !=null and status!=''">
	    	and l.status = #{status}
	    </if>

	    <if test="loginName !=null and loginName!=''">
	    	and u.login_name like concat('%',#{loginName},'%')
	    </if>
	    <if test="userName !=null and userName != ''">
	    	and u.name like concat('%',#{userName},'%')
	    </if>
    </where>
	order by l.login_time desc
  </select>
  
  <insert id="insert" parameterType="org.qboot.sys.dto.SysLoginLogDto" >
    insert into sys_login_log (ID, status,login_time,ip,area,user_agent,device_name,browser_name,create_by,create_date,update_by,update_date,remarks)
    values (#{id},#{status},#{loginTime},#{ip},#{area},#{userAgent},#{deviceName},#{browserName},#{createBy},#{createDate},#{updateBy},#{updateDate},#{remarks})
  </insert>
</mapper>